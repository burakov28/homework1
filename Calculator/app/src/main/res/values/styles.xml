<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegularButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/RegularButtonTextColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RegularPortButton" parent="RegularButton">
        <item name="android:textSize">23sp</item>
        <item name="android:background">@color/RegularButtonColor</item>
    </style>

    <style name="EquationPortButton" parent="RegularButton">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/EquationButtonColor</item>
    </style>

    <style name="RegularLandButton">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EquationLandButton" parent="RegularButton">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/EquationButtonColor</item>
        <item name="android:layout_weight">3</item>
    </style>
</resources>